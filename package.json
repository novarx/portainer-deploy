{
  "author": "novarx @novarx",
  "description": "Deploys a docker-compose.yml as a stack to a portainer instance",
  "homepage": "https://gitlab.com/nvax/portainer-deployer",
  "license": "MIT",
  "main": "dist/index.js",
  "name": "@nvax/portainer-deployer",
  "repository": "novarx.ch/portainer-deployer",
  "version": "0.0.0",
  "bugs": "https://gitlab.com/nvax/portainer-deployer/-/issues",
  "keywords": [
    "oclif"
  ],
  "bin": {
    "portainer-deployer": "./bin/run.js"
  },
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "prepare": "npm run build",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "dependencies": {
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^4",
    "axios": "^1.6.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8.56.0",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10",
    "oclif": "^3.17.2",
    "shx": "^0.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "oclif": {
    "bin": "portainer-deployer",
    "dirname": "portainer-deployer",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "deploy": {}
    }
  },
  "types": "dist/index.d.ts"
}
